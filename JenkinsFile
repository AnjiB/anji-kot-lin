pipeline {
    agent any
    stages {
    stage('Cleaning workspace') {
        steps {
            cleanWs()
        }
    }
    stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/AnjiB/anji-kot-lin']]])
            }
        } 
    stage('Build Kotlin Project') {
        steps {
            echo 'Building..'
            sh "pwd"
            sh "./gradlew clean build"
        }
    }
    
    stage('Static Code Analysis') {
        steps {
            jacoco buildOverBuild: true, changeBuildStatus: true, runAlways: true, skipCopyOfSrcFiles: true, sourcePattern: '**/src/main/kotlin/**'
        }
    }
   }
}
